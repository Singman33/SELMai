# Database Configuration
DB_ROOT_PASSWORD=your_secure_root_password_here
DB_NAME=selmai
DB_USER=selmai_user
DB_PASSWORD=your_secure_database_password_here

# JWT Secret (IMPORTANT: Generate a strong random secret)
# You can generate one with: openssl rand -base64 64
JWT_SECRET=your_very_secure_jwt_secret_key_here_change_this_in_production

# API URL for frontend (change to your domain)
REACT_APP_API_URL=https://selmai.fr/api

# Email Configuration (optional, for notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASSWORD=your_smtp_password
SMTP_FROM=noreply@yourdomain.com

# Application Settings
NODE_ENV=production
TZ=Europe/Paris

# Domain (for SSL certificate)
DOMAIN=selmai.fr
